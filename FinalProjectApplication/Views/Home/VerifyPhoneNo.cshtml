
@{
    ViewBag.Title = "VerifyPhoneNo";
}

@if (ViewBag.Message != null)
{
    <div class="alert overlay">
        <strong>Success!</strong><br /><br /><br />@ViewBag.Message
    </div>
}
<style>


    .overlay {
        position: fixed;
        width: 35%;
        height: 18%;
        border-color: #2E4A62;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: 2;
        text-align: center;
        background-color: #343148;
        color: white;
    }
</style>
<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(0, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 5000);
</script>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="~/Content/VerificationCode.css" rel="stylesheet" />
    <title></title>

</head>

<body>

    @if (ViewBag.Message2 != null)
    {
        <br />
        <br />
        <br />
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Danger!</strong>@ViewBag.Message2
        </div>

    }

    <form method="post" action="~/Home/VerifyPhoneNo">


        <div class="box form-horizontal">
            <br />
            <br />
            <h1 style="color:#fb2525;font:bold;">Verify Your Phone no</h1><br /><br>
            <div class="form-group">

                <div class="col-md-10">
                    <input type="text" class="form-control" name="code" id="code" required placeholder="Enter verification code" />

                </div>
            </div>

            <div class="form-group" style="margin-left:10px;">

                <div class="col-md-10">
                    <input type="submit" id="submit" class="form-control" />

                </div>
            </div>

            <strong><a href="/Home/VerifyPhoneNo" style="color:#fff;margin-left:250px;">Resend Code?</a></strong>
        </div>



    </form>


</body>

</html>

