@model IEnumerable<FinalProjectApplication.Models.Event>

@{
    ViewBag.Title = "ShowRecentEvent";
}
<br />
<h2>Recent Event</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.EventTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDescription)
        </th>
 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.EventTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventDescription)
        </td>

        <td>    
            @Html.ActionLink("Details", "DetailEvent", new { id=item.EventId }) |   
        </td>
    </tr>
}

</table>
